{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/awslabs/aws-sam-cli/blob/master/samcli/config/schema.json",
    "title": "SAMRC JSON Schema",
    "description": "SAMRC configuration schema",
    "properties": {
        "default": {
            "description": "Default settings that will be shared across commands",
            "type": "object",
            "properties": {
                "aws_region": {
                    "type": "string",
                    "description": "Default AWS Region to use"
                },
                "aws_profile": {
                    "type": "string",
                    "description": "Default AWS Profile to use"
                },
                "default_port": {
                    "type": "integer",
                    "description": "Default local listening port"
                },
                "debug_port": {
                    "type": "integer",
                    "description": "Default debug listening port"
                },
                "template": {
                    "type": "string",
                    "description": "Default SAM template filename"
                }
            }
        }
    }
}