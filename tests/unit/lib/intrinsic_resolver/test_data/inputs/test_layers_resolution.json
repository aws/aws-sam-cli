      "LayerVersionDoesNotExistFunction":
        {
          "Type": "AWS::Serverless::Function",
          "Properties":
            {
              "Handler": "layer-main.handler",
              "Runtime": "python3.6",
              "CodeUri": ".",
              "Layers": [{ "Ref": "NonExistentLayerArn" }]
