      "LayerVersionAccountDoesNotExistFunction":
        {
          "Type": "AWS::Serverless::Function",
          "Properties":
            {
              "Handler": "layer-main.handler",
              "Runtime": "python3.6",
              "CodeUri": ".",
              "Layers":
                [
                  "arn:aws:lambda:us-west-2:111111111101:layer:layerDoesNotExist:1"
                ]
